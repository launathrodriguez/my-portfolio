---
const { title, projects } = Astro.props;

const logoBasePath = "/assets/logos/";
---

<section class="projects__container" id="projects">
    <div class=" d-flex align-items-center justify-content-center flex-wrap">
        <h1>{title}</h1>
    </div>
    <article class="d-flex flex-wrap">
    {projects.map((project: { name: string; description: string; technologies: string[] }) => (
        <article class="project__box">
            <h3>{project.name}</h3>
            <p>{project.description}</p>
            {project.technologies && (
                <ul class="project-technologies">
                    {project.technologies.map((tech) => (
                        <img src={`${logoBasePath}${tech}.svg`} alt={tech} class="project-logo" aria-label={tech} width="20" height="20" />
                    ))}
                </ul>
                )}
            </article>
        ))}
    </article>
</section>

<style>
.projects__container {
    padding: 5rem 25rem;
}

.project__box {
    background: var(--navbar-bg);
    border: var(--navbar-border);
    border-radius: 2rem;
    box-shadow: 0 2px 4px var(--secondary-50);
    padding: 2rem;
    margin: 2rem;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    backdrop-filter: blur(20px);
    width: 100%;
    transition: transform 220ms ease;
}

.project__box:hover, .project__box:focus { transform: scale(1.15) !important; }

.project-logo {
    margin-right: 0.5rem;
}

@media (max-width: 1024px) {
  .projects__container {
    padding: 2rem 5rem;
  }
}

@media (max-width: 600px) {
  .projects__container {
    padding: 1rem 2rem;
  }
}
</style>