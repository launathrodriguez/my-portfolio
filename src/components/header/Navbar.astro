---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const menuLabels = {
	home: t("menu.home"),
    about: t("menu.about"),
	experience: t("menu.experience"),
	projects: t("menu.projects")
};

const menuItems = [
  { label: menuLabels.home, href: "" },
  { label: menuLabels.about, href: "#about" },
  { label: menuLabels.experience, href: "#experience" },
  { label: menuLabels.projects, href: "#projects" }
];
---
<script>
window.addEventListener("DOMContentLoaded", () => {
    const menuLinks = document.querySelectorAll(".navbar__item");

    menuLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        menuLinks.forEach((item) => item.classList.remove("navbar__item--checked"));
        const target = e.currentTarget as HTMLElement | null;
        if (target) {
          target.classList.add("navbar__item--checked");
        }
      });
    });
});
</script>
  
<nav class="navbar d-flex align-items-center" aria-label="Primary">
    {menuItems.map(({ label, href }, index) => (
      <input type="checkbox" id={label} class="d-none" checked={} />
      <a
        href={href}
        class={`navbar__item${index === 0 ? ' navbar__item--checked' : ''}`}
        data-index={index}
      >{label}</a>
    ))}
</nav>

<style>
.navbar {
  position: fixed;
  top: 3rem;         
  left: 50%;
  gap: 1rem;
  transform: translateX(-50%);
  z-index: 1000;
  height: 5rem;
  background: var(--navbar-bg);
  border: var(--navbar-border);
  border-radius: 999rem;
  padding: 1rem 3rem;
  backdrop-filter: blur(20px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
}

.navbar a {
  margin-left: 2rem;
}

.navbar__item {
  position: relative;
  cursor: pointer;
  transition: color 0.3s ease, transform 0.2s ease;
}

.navbar__item::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background: var(--text-gradient);
  left: 0;
  bottom: -4px;
  transform: scaleX(0);
  transform-origin: center;
  transition: transform 0.3s ease;
}

.navbar__item--checked {
  color: var(--text-gradient);
}

.navbar__item--checked::after {
  transform: scaleX(1);
}

a {
  text-decoration: none;
  color: var(--link-color);
  line-height: 1.2;
  font-size: var(--text-xl);
}

a:hover {
  color: var(--text-gradient);
  background: var(--text-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
</style>